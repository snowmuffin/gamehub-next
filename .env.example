# Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production

# =============================================================================
# NEXT.JS CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3000

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
# Frontend domain (where the Next.js app is hosted)
# Development options:
# NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
# NEXT_PUBLIC_FRONTEND_URL=https://test.yourdomain.com
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_FRONTEND_DOMAIN=localhost:3000

# API Server domain
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_API_DOMAIN=api.yourdomain.com

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Steam Authentication URL
NEXT_PUBLIC_STEAM_AUTH_URL=https://api.yourdomain.com/auth/steam

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Additional allowed origins (comma-separated list)
# This is used in middleware.ts for CORS handling
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:4000,https://localhost:4000

# =============================================================================
# PRODUCTION OVERRIDES (for .env.production)
# =============================================================================
# NODE_ENV=production
# NEXT_PUBLIC_FRONTEND_URL=https://gamehub.yourdomain.com
# NEXT_PUBLIC_FRONTEND_DOMAIN=gamehub.yourdomain.com
# PORT=3000

# =============================================================================
# ADDITIONAL CONFIGURATION
# =============================================================================
# Database (if needed)
# DATABASE_URL=your_database_url

# Security
# SECRET_KEY=your_secret_key
# JWT_SECRET=your_jwt_secret

# External Services
# STEAM_API_KEY=your_steam_api_key
