{
  "name": "scifi",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -H 0.0.0.0",
    "dev:https": "next dev -H 0.0.0.0 --experimental-https",
    "build": "npm run clean:macos && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:eslint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit -p tsconfig.typecheck.json",
    "prepare": "husky",
    "postcss": "sass ./public/assets/scss/style.scss ./public/assets/css/style.css && postcss ./public/assets/css/style.css -o ./public/assets/css/style.css",
    "sass": "sass ./public/assets/scss/:./public/assets/css/",
    "sass-min": "sass ./public/assets/scss/:./public/assets/css/ --style compressed",
    "clean:macos": "find . -name '._*' -delete && find . -name '.DS_Store' -delete",
    "clean:all": "npm run clean:macos && rm -rf node_modules/.cache && rm -rf .next",
    "prebuild": "npm run clean:macos",
    "quality": "npm run lint:fix && npm run format && npm run type-check",
    "pm2:deploy": "./deploy.sh",
    "pm2:restart": "./restart.sh",
    "pm2:setup": "./ec2-setup.sh",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop gamehub-next",
    "env:set": "./set-env.sh",
    "env:example": "cp .env.example .env.local",
    "nginx:setup": "./setup-nginx.sh",
    "pm2:delete": "pm2 delete gamehub-next",
    "pm2:status": "pm2 status",
    "pm2:logs": "pm2 logs gamehub-next",
    "yarn:install": "yarn install",
    "yarn:build": "yarn build",
    "yarn:start": "yarn start",
    "yarn:clean": "./yarn-clean.sh"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@reduxjs/toolkit": "^2.8.2",
    "axios": "^1.12.0",
    "next": "^15.5.3",
    "react": "^19.1.1",
    "react-bootstrap": "2.10.10",
    "react-countdown": "2.3.6",
    "react-country-flag": "^3.1.0",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.2.0",
    "react-redux": "9.2.0",
    "redux-persist": "^6.0.0",
    "sass": "^1.90.0",
    "simplebar-react": "3.3.2",
    "swiper": "11.2.10",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "24.2.1",
    "@types/react": "19.1.10",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "depcheck": "^1.4.7",
    "eslint": "^9.35.0",
    "eslint-config-next": "15.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.6",
    "knip": "^5.64.2",
    "lint-staged": "^15.2.10",
    "prettier": "^3.4.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix --file"
    ],
    "*.{json,md,scss,css}": [
      "prettier --write"
    ]
  }
}
